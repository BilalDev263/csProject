@model mvc.Models.Event

<h1>Détails de l'événement</h1>

<p><strong>Titre :</strong> @Model.Title</p>
<p><strong>Description :</strong> @Model.Description</p>
<p><strong>Date :</strong> @Model.EventDate.ToShortDateString()</p>
<p><strong>Participants max :</strong> @Model.MaxParticipants</p>
<p><strong>Lieu :</strong> @Model.Location</p>
<p><strong>Créé le :</strong> @Model.CreatedAt.ToShortDateString()</p>

<a asp-action="Index" class="btn btn-primary">Retour à la liste</a>
