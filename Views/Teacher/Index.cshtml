@model IEnumerable<mvc.Models.Teacher>

<h1>Liste des enseignants</h1>
<table class="table">
    <thead>
        <tr>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.Firstname</td>
                <td>@teacher.Lastname</td>
                <td>@teacher.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@teacher.Id" class="btn btn-info">Détails</a>
                    <a asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-warning">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="add" class="btn btn-primary">Ajouter un enseignant</a>
