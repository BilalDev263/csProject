@model IEnumerable<mvc.Models.Student>

<h1>Liste des étudiants</h1>
<table class="table">
    <thead>
        <tr>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Âge</th>
            <th>Spécialité</th>
            <th>Date d'admission</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Firstname</td>
                <td>@student.Lastname</td>
                <td>@student.Age</td>
                <td>@student.Specialite</td>
                <td>@student.AdmissionDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-info">Détails</a>
                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-warning">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Add" class="btn btn-primary">Ajouter un étudiant</a>
